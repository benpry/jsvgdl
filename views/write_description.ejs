<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="/client/experiment.js"></script>

    <script src="/gamejs-2.0.3-pre.js"></script>
    <script src="/tools.js"></script>
    <script src="/ontology/constants.js"></script>
    <script src="/ontology/physics.js"></script>
    <script src="/ontology/termination.js"></script>
    <script src="/ontology/conditional.js"></script>
    <script src="/ontology/effect.js"></script>
    <script src="/ontology/sprite-induction.js"></script>
    <script src="/ontology/vgdl-sprite.js"></script>
    <script src="/ontology/avatar.js"></script>
    <script src="/ontology/resource.js"></script>
    <script src="/core/basic-game.js"></script>
    <script src="/core/vgdl-parser.js"></script>

    <!-- <script src="/standard/compose_message.js"></script> -->
    <link
      href="https://fonts.googleapis.com/css?family=Lato:thin"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Asap:700|Lato"
      rel="stylesheet"
    />
    <script type="text/javascript">
      var exp_id = '<%-exp_id%>';
      var vgdl_game = {level: `<%-game_obj.level%>`,
                       game : `<%-game_obj.game%>`};
      var color_scheme = <%=game_obj.color_scheme%>;

     var continue_fn = <%- continue_fn %>

      require.setModuleRoot('/');
      require.run(`write_description`);
    </script>
    <style>
      p {
        margin-top: 0px;
      }
    </style>
  </head>

  <body>
    <div class="Flex-Container">
      <div class="Flex-Container" id="info-box">
        <h1>Description</h1>


        <p style="text-align: left">
          Please <span style="font-weight: bold">describe the game</span>!
        </p>

        <div class="input-group">
          <textarea
            id="textbox"
            placeholder=""
            rows="4"
            cols="50"
          ></textarea>
        </div>

        <div id="game-body" class="Flex-Container">
          <div id="gjs-loader">
            <progress max="1" min="0" steps="0.1"></progress>
            <br />Loading...
          </div>
          <canvas
            id="gjs-canvas"
            style="max-width: 500px; margin-bottom: 20px"
          ></canvas>
        </div>

        <div class="flex-buttons">
          <div class="flex-button" id="start-div">
            <button id="continue">Continue</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
